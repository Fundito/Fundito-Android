<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fundito.fundito">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        tools:ignore="LockedOrientationActivity"
        android:usesCleartextTraffic="true"
        android:name=".application.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="m">
        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>
        <activity android:name=".presentation.splash.SplashActivity"
            android:screenOrientation="portrait"
            android:configChanges="screenLayout|orientation|fontScale|locale|screenSize"
           android:exported="true"
            />
        <activity android:name=".presentation.login.CardRegisterActivity"
           android:exported="true"
           />
        <activity android:name=".presentation.login.LoginActivity"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".presentation.main.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="screenLayout|orientation|fontScale|locale|screenSize"
            />
        <activity android:name=".presentation.store.StoreDetailActivity"
            android:screenOrientation="portrait"
            android:configChanges="screenLayout|orientation|fontScale|locale|screenSize"
            android:exported="true"
            />
        <activity android:name=".presentation.store.StoreCheerActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:configChanges="screenLayout|orientation|fontScale|locale|screenSize"

            />
        <activity android:name=".presentation.charge.ChargeActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:configChanges="screenLayout|orientation|fontScale|locale|screenSize"
            />

    </application>

</manifest>