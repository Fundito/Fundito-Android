<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#ffffff">
<!-- title 3개 -->
    <TextView
        android:id="@+id/fundingTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="8sp"
        android:text="투자금액"
        android:textColor="@color/black"
        android:fontFamily="@font/spoqa_han_sans_regular"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:visibility="gone"
        android:id="@+id/fundingTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="8sp"
        android:text="나의 투자현황"
        android:textColor="@color/black"
        android:fontFamily="@font/spoqa_han_sans_regular"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:visibility="gone"
        android:id="@+id/fundingTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="8sp"
        android:text="목표도달까지 17%남음"
        android:textColor="@color/black"
        android:fontFamily="@font/spoqa_han_sans_regular"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

<!--   이미지 -->

    <androidx.viewpager.widget.ViewPager
        android:layout_width="416dp"
        android:layout_height="446dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="411dp"
        android:layout_height="77dp"
        android:background="#fffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

<!--        버튼 세가지 -->

        <Button
            android:id="@+id/completeInput_btn"
            android:layout_width="343dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:text="입력완료"
            android:fontFamily="@font/spoqa_han_sans_regular"
            app:layout_constraintStart_toStartOf="parent"
           />

        <Button
            android:visibility="gone"
            android:id="@+id/completePay_btn"
            android:layout_width="343dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:fontFamily="@font/spoqa_han_sans_regular"
            android:text="결제/투자하기"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:visibility="gone"
            android:id="@+id/completeFunding_btn"
            android:layout_width="343dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:text="완료"
            android:fontFamily="@font/spoqa_han_sans_regular"
            app:layout_constraintStart_toStartOf="parent"
            />


    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>