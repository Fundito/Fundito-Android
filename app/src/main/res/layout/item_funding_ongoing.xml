<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

    </data>

    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        app:cardBackgroundColor="#ccffffff"
        app:cardCornerRadius="0dp"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/name"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="11dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="8sp"
                android:gravity="end"
                tools:text="황호댁"
                />

            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name"
                android:id="@+id/remainDay"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/blueberry_two"
                android:lineSpacingExtra="8sp"
                android:gravity="end"
                tools:text="3일 남음"
                />

            <TextView
                android:id="@+id/progress"
                android:layout_marginTop="11dp"
                android:layout_marginRight="16dp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/blueberry_two"
                android:lineSpacingExtra="8sp"
                android:gravity="end"
                tools:text=" 83% 달성중"
                />

            <com.fundito.fundito.common.view.FundingProgressView
                android:id="@+id/progressView"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toTopOf="@id/remainDay"
                android:layout_width="0dp"
                android:layout_height="20dp"
                app:layout_constraintBottom_toBottomOf="@id/remainDay"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/remainDay"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</layout>