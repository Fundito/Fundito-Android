<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_navy</item>
        <item name="colorPrimaryDark">@color/dark_navy</item>
        <item name="colorAccent">@color/peachy_pink</item>

        <item name="android:fontFamily">@font/spoqa_han_sans_regular</item>
        <item name="fontFamily">@font/spoqa_han_sans_regular</item>

        <item name="android:statusBarColor">@color/dark_navy</item>

        <item name="materialButtonStyle">@style/MaterialButtonStyle</item>
        <item name="materialButtonOutlinedStyle">@style/MaterialButtonOutlinedStyle</item>

        <item name="textAppearanceButton">@style/ButtonTextAppearance</item>

    </style>


    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/dark_navy</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>

    </style>
    <style name="MaterialButtonOutlinedStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/dark_navy</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textColor">@color/dark_navy</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="ButtonTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="KeyboardBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">#ffff</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>
<!--    <style name="KeyboardBottomSheet" parent="Widget.Design.BottomSheet.Modal">-->
<!--        <item name="android:background">@drawable/round_bottom_sheet_background</item>-->
<!--    </style>-->

    <style name="KeyboardButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:textAppearance">@style/KeyboardButtonTextAppearance</item>
        <item name="android:textColor">@color/dark_navy</item>
        <item name="rippleColor">@color/dark_navy</item>
    </style>
    <style name="KeyboardButtonTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.AppCompat.BottomNavigation">
        <item name="android:textSize">13sp</item>
    </style>
</resources>
